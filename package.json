{
	"name": "node-bandwidth",
	"version": "3.0.0-alpha.1",
	"description": "NodeJS Client library for Bandwidth API",
	"engines": {
		"node": ">=8.9"
	},
	"files": ["dist/**/*", "lib/**/*", "*.json", "LICENSE"],
	"scripts": {
		"precommit": "npm run format",
		"test": "ava",
		"lint": "xo",
		"format": "pretty-quick --staged && xo --fix",
		"prepare-api-data": "node tools/prepare-api-data.js",
		"build:node": "tsc -t es2017 -m commonjs",
		"build:browser-amd":
			"tsc -m amd --outFile dist/node-bandwidth.amd.js && node tools/prepare-global-browser-script.js && uglifyjs dist/node-bandwidth.js -c -m -o dist/node-bandwidth.min.js",
		"build:browser-system":
			"tsc -m system --outFile dist/node-bandwidth.system.js",
		"build:browser-commonjs":
			"tsc -m commonjs --outDir dist/node-bandwidth.commonjs",
		"build":
			"npm run lint && npm run prepare-api-data && npm-run-all --parallel build:*",
		"install": "npm run prepare-api-data",
		"prepack": "npm run build"
	},
	"main": "dist/index.js",
	"browser": "dist/commonjs/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/Bandwidth/node-bandwidth.git"
	},
	"keywords": ["bandwidth", "catapult", "cpaas", "voice", "messaging"],
	"author": "bandwidth",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Bandwidth/node-bandwidth/issues"
	},
	"homepage": "https://github.com/Bandwidth/node-bandwidth",
	"devDependencies": {
		"ava": "^0.24.0",
		"eslint-plugin-prettier": "^2.5.0",
		"husky": "^0.14.3",
		"js-yaml": "^3.10.0",
		"json-refs": "^3.0.3",
		"npm-run-all": "^4.1.2",
		"prettier": "^1.10.2",
		"pretty-quick": "^1.2.1",
		"typescript": "^2.6.2",
		"uglify-js": "^3.3.7",
		"xo": "^0.18.2"
	},
	"dependencies": {
		"axios": "^0.17.1",
		"joi": "^13.1.0"
	},
	"xo": {
		"plugins": ["prettier"],
		"rules": {
			"prettier/prettier": "error"
		}
	},
	"prettier": {
		"singleQuote": true,
		"bracketSpacing": false,
		"useTabs": true
	}
}
